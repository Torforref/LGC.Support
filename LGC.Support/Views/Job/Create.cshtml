                                    </select>
                                </div>
                                <div class="position-relative form-group col-md-6">
                                    <label for="exampleSelect" class="">Select Customer</label>
                                    <select name="select" id="exampleSelect" class="form-control">
                                        <option>Logicode 1</option>
                                        <option>Logicode 2</option>
                                    </select>
                                </div>
                                <div class="col-md-6">
                                    <div class="position-relative form-group">
                                        <label for="CustomerContact" class="">Contact</label>
                                        <input name="contact" id="contact" type="text" class="form-control">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="position-relative form-group">
                                        <label for="email" class="">Email</label>
                                        <input name="email" id="email" type="email" class="form-control">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="position-relative form-group">
                                        <label for="phone_number" class="">Phone number</label>
