                                    </div>
                                </div>
                                <div class="position-relative form-group col-md-6">
                                    <label for="address" class="">Address</label>
                                    <input name="address" id="address" type="text" class="form-control">
                                </div>
                            </div>









                            <div class="position-relative form-row col-md-12" id="AddProductToJobService">
                                @{
                                    var product_number = 0;
                                    var SelectProductName_ = "SelectProductName_" + product_number;
                                    var SelectProductQty_ = "SelectProductQty_" + product_number;
                                    var ProductSN_ = "ProductSN_" + product_number;
                                }
                                <div class="position-relative col-md-5 form-group">
                                    <label for="exampleSelect" class="">Select Product</label>
                                    <select name="select" id="@SelectProductName_" class="form-control">
                                        <option>--- Select Product---</option>
                                        <option>TSC DA210</option>
                                        <option>CIP 1564A</option>
                                        <option>HNW 1950G-HD</option>
                                        <option>VENUS XPRT085</option>
                                    </select>
                                </div>
                                <div class="position-relative col-md-1 form-group">
                                    <label for="exampleSelect">Qty.</label>
                                    <select name="SelectProductQty" id="@SelectProductQty_" class="form-control" onchange="HandleSelectProductQty(event)">
                                        @for (var i = 1; i<100; i++)
                                        {
                                            <option value="@i">@i</option>
                                        }
                                    </select>
                                </div>

                                <div class="position-relative col-md-5 form-group" id="@ProductSN_">
                                    <label for="" class="">Serial Number</label>
                                    <input type="text" class="form-control">
                                </div>


                                <button type="button" data-toggle="tooltip" title="" data-placement="bottom" class="btn-shadow btn btn-danger form-group" data-original-title="Delete" style="margin-top: 30px; margin-left: 25px">
                                    <i class="fa fa-trash" aria-hidden="true"></i>
                                </button>
                                
                                <script>
                                    function HandleSelectProductQty(event) {
                                        var selectElement = event.target;
                                        var value = selectElement.value;
                                        
                                        document.getElementById("@ProductSN_").innerHTML = '';
                                       for (var i = 0; i<value; i++)
                                        {
                                            document.getElementById("@ProductSN_").innerHTML += '<label for="" class="" id="">Serial Number No.' + (i+1) + '</label><input type="text" class="form-control">';
                                        }
                                    }
                                </script>

                            </div>
                        </div>

                        <h5>Total Qty. ###</h5>

                        <div>
                            <button onclick="AddAnotherProduct()" type="button" class="mt-2 btn btn-dark">Add another product</button>
                        </div>

                        <script>
                            function AddAnotherProduct() {
                                @{
                                    product_number += 1;
                                    SelectProductName_ = "SelectProductName_" + product_number;
                                    SelectProductQty_ = "SelectProductQty_" + product_number;
                                    ProductSN_ = "ProductSN_" + product_number;
                                }
                                document.getElementById("AddProductToJobService").innerHTML += '<div class="position-relative col-md-5"><label for="exampleSelect" class="">Select Product</label><select name="select" id="@SelectProductName_" class="form-control"><option>--- Select Product---</option><option>TSC DA210</option><option>CIP 1564A</option> <option>HNW 1950G-HD</option> <option>VENUS XPRT085</option></select></div><div class="position-relative col-md-1"><label for="exampleSelect">Qty.</label><select name="SelectProductQty" id="@SelectProductQty_" class="form-control" onchange="HandleSelectProductQty(event)">@for (var i = 1; i<100; i++){<option value="@i">@i</option> }</select> </div> <div class="position-relative col-md-5" id="@ProductSN_"><label for="" class="" >Serial Number</label> <input type="text" class="form-control"> </div><button type="button" data-toggle="tooltip" title="" data-placement="bottom" class="btn-shadow btn btn-danger" data-original-title="Delete" style="margin: 33px 33px"><i class="fa fa-trash" aria-hidden="true"></i></button>';
                            }
                        </script>

