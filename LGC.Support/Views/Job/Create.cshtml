@model JobData

<div class="row">
    <div class="col-md-12 col-sm-12 ">
        <div class="x_panel">
            <div class="x_title">
                <h2>Create Job Service</h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <br>


                <form id="demo-form2" data-parsley-validate="" class="form-horizontal form-label-left" asp-controller="Job" asp-action="Create">
                    <div class="item form-group">
                        <label asp-for="created_at" class="col-form-label col-md-3 col-sm-3 label-align">
                            Start Date
                        </label>
                        <div class="col-md-6 col-sm-6 ">
                            <input asp-for="created_at" class="date-picker form-control" type="text" placeholder="@DateTime.Now.ToString("dd MMMM yyyy")" readonly="readonly">
                        </div>
                    </div>
                    <div class="item form-group">
                        <label asp-for="job_number" class="col-form-label col-md-3 col-sm-3 label-align">
                            Job Service No. <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6">
                            <input asp-for="job_number" type="text" class="form-control" readonly="readonly" placeholder="@ViewBag.job_number">
                        </div>
                    </div>
                    <div class="item form-group">
                        <label asp-for="customer_id" class="col-form-label col-md-3 col-sm-3 label-align">
                            Select Customer <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6">
                            <select asp-for="customer_id" class="form-control select_page" required="required">
                                <option value="@null">---- Select ----</option>
                                @foreach (CustomerData customer in @ViewBag.customer)
                                {
                                    <option value="@customer.id">@customer.name</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="item form-group">
                        <label asp-for="service_type" class="col-form-label col-md-3 col-sm-3 label-align">
                            Select Service <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6">
                            <select asp-for="service_type" onchange="update_expire_date(this);" class="form-control select_page" required="required">
                                <option value=@null>---- Select ----</option>
                                <option value="PM">PM : Preventive Maintenance</option>
                                <option value="MA">MA : Maintenance Agreement</option>
                            </select>
                        </div>
                    </div>
                    <div class="item form-group">
                        <label asp-for="expire_date" class="col-form-label col-md-3 col-sm-3 label-align">
                            Expire Date
                        </label>
                        <div class="col-md-6 col-sm-6" id="expire_date">
                            <input asp-for="expire_date" class="date-picker form-control" id="exp_date" type="text" placeholder="Please select service" readonly="readonly">
                        </div>
                    </div>
                    <div class="item form-group">
                        <label asp-for="onsite_date" class="col-form-label col-md-3 col-sm-3 label-align">
                            On Site Date <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 ">
                            <input asp-for="onsite_date" class="date-picker form-control" placeholder="dd-mm-yyyy" type="date" required="required" onfocus="this.type='date'" onmouseover="this.type='date'" onclick="this.type='date'" onblur="this.type='text'" onmouseout="timeFunctionLong(this)">
                            <script>
                                function timeFunctionLong(input) {
                                setTimeout(function() {
                                input.type = 'text';
                                }, 60000);
                                }
                            </script>
                        </div>
                    </div>
                    <div class="item form-group">
                        <label asp-for="customer_po" class="col-form-label col-md-3 col-sm-3 label-align">
                            Customer PO No. <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 ">
                            <input asp-for="customer_po" type="text" required="required" class="form-control">
                        </div>
                    </div>
                    <div class="item form-group">
                        <label asp-for="price" class="col-form-label col-md-3 col-sm-3 label-align">
                            Price
                        </label>
                        <div class="col-md-6 col-sm-6">
                            <input asp-for="price" type="number" class="form-control">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="description" class="col-form-label col-md-3 col-sm-3 label-align">
                            Description <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-9 ">
                            <textarea asp-for="description" class="form-control" rows="3"></textarea>
                        </div>
                    </div>
                    <br />
                    <br />
                    <div class="ln_solid" id="ln_solid"></div>


                    <input type="hidden" value="0" id="total_chq">
                    <input type="hidden" value="1" id="item_count">
                    <div id="item_detail">

                        <div class="item form-group" id="item_0">
                            <label class="col-form-label col-md-3 col-sm-3 label-align">
                                Item <span class="required">*</span>
                            </label>
                            <div class="col-md-2 col-sm-2">
                                <select class="form-control select_page select_item" required="required" id="select_item_id_0" style="vertical-align: text-top">
                                    <option value=@null>---- Select ----</option>
                                    @foreach (ProductData product in @ViewBag.product)
                                    {
                                        <option value="@product.id">@product.name</option>
                                    }
                                </select>
                            </div>
                            <label class="col-form-label col-md-1 label-align">
                                Qty. <span class="required">*</span>
                            </label>
                            <div class="col-md-2 col-sm-2">
                                <select class="form-control select_page item_qty" required="required" id="serial_qty_0" style="vertical-align: text-top">
                                    <option value=@null>---- Select ----</option>
                                    @for (var i = 1; i<100; i++)
                                    {
                                        <option value="@i">@i</option>
                                    }
                                </select>
                            </div>
                            <button type="button" class="btn btn-warning btn-sm btn_addSN" style="height: 35px; margin-left: 15px" id="0" data-toggle="modal" data-target="exampleModalScrollable_0">Add S/N</button>
                        </div>

                        <!-- Modal -->
                        <div class="modal fade" id="exampleModalScrollable_0" tabindex="-1" role="dialog" aria-labelledby="exampleModalScrollable_0" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-scrollable" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalScrollable_0">Add Serial Number</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body modal-body_0">

                                        <!-- Serial Number Field -->
                                        <div id="modal-body_0">
                                        </div>

                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                        <button type="button" class="btn btn-primary btn_saveModal" id="0">Save changes</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <br />

                    <div style="text-align: center" id="total_item">
                        <strong id=current_total_items><h2>Total quantity: 1 items</h2></strong>
                    </div>
                    <div class="ln_solid" id="ln_solid"></div>
                    <div class="item form-group" id="button_form">
                        <div class="col-md-6 col-sm-6 offset-md-3">
                            <button type="submit" class="btn btn-primary">Submit</button>
                            <a asp-controller="Job" asp-action="Index" class="btn btn-danger">Cancel</a>
                            <button type="button" class="btn btn-dark btn-addItem" style="color: #ffff;">Add</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts{
<script>
         var selectedData = [[]];
         var count_item = 1;

         $(document).ready(function()
         {
             $(".select_page").select2({
                 width: '100%'
             });
         });

         $(document).on("click", ".btn_addSN", function() {
             var item_id = $(this).attr("id");
             var item_value = parseInt($(`#select_item_id_${item_id}`).val());

             if (isNaN(item_value)) {
                 alert("Please select item.");
             } 
             else 
             {
                var serial_qty = $(`#serial_qty_${item_id}`).val();
                var count_serial_field = $(`.serial_field_${item_id}`).length;

                 if (selectedData[item_id].length === 0) {
                     $(`#modal-body_${item_id}`).remove();
                     $(`.modal-body_${item_id}`).append(`<div id="modal-body_${item_id}"></div>`);
                     for (let i=0; i<serial_qty; i++) {
                     var SN_field = `<div id="serial_field_${item_id}_${i}" class="item form-group serial_field_${item_id}">
                                         <label class="col-form-label col-md-3 col-sm-3 label-align">
                                             Serial No.${(i+1)} <span class="required">*</span>
                                         </label>
                                         <div class="col-md-9 col-sm-9 ">
                                             <input id="serial_value_${item_id}_${i}" type="text" class="form-control" required="required">
                                         </div>
                                     </div>`
                     $(`#modal-body_${item_id}`).append(SN_field);

                     }

                 }
                 else if (selectedData[item_id].length > serial_qty) {

                    if (count_serial_field > serial_qty) {
                        for (let i=count_serial_field; i>serial_qty; i--) {
                            $(`#serial_field_${(i-1)}`).remove();
                            selectedData[item_id].pop();
                            alert(`#serial_field_${(i-1)}`)
                        }
                    }
                 }
                 else
                 {
                     alert("else")
                     for (let i=0; i<selectedData[item_id].length; i++) {
                         var show_SN = selectedData[item_id][i];
                         $(`.modal-body_${item_id} #serial_value_${item_id}_${i}`).val(show_SN.serial_number);
                     }

                    if (count_serial_field > selectedData[item_id].length) {
                        for (let i=count_serial_field; i>=selectedData[item_id].length; i--) {
                            $(`#serial_field_${item_id}_${i}`).find("input").val('');
                        }
                     }

                     if (count_serial_field > serial_qty) {
                         for (let i=count_serial_field; i>=serial_qty; i--) {
                             $(`#serial_field_${item_id}_${i}`).remove();
                         }
                     }
                     else
                     {
                         for (let i=selectedData[item_id].length; i<serial_qty; i++) {
                             if ($(`#serial_field_${item_id}_${i}`).length) {
                                 continue;
                             }
                             else
                             {
                                 var SN_field = `<div id="serial_field_${item_id}_${i}" class="item form-group serial_field_${item_id}">
                                                     <label class="col-form-label col-md-3 col-sm-3 label-align">
                                                         Serial No.${(i+1)} <span class="required">*</span>
                                                     </label>
                                                     <div class="col-md-9 col-sm-9 ">
                                                         <input id="serial_value_${item_id}_${i}" type="text" class="form-control" required="required">
                                                     </div>
                                                 </div>`
                                 $(`#modal-body_${item_id}`).append(SN_field);
                             }
                         }
                     }
                    
                 }
             $(`#exampleModalScrollable_${item_id}`).modal('show');
             }
             $(".select_page").select2({
                width: '100%'
             });
         });


         $(document).on("click", ".btn_saveModal", function() {
             var modal_id = $(this).attr("id");
             var serial_qty = $(`#serial_qty_${modal_id}`).val();
             var sn_is_null = false;
            for (let i=0; i<serial_qty; i++) {
                 var x = $(`#serial_value_${modal_id}_${i}`).val();
                 if (x === "") {
                     alert(`Serial number ${(i+1)} value is required.`);
                     sn_is_null = true;
                     break;
                 }
             }
             var select_item_id = $(`#select_item_id_${modal_id}`).val();
             if (sn_is_null === false) {
                 for (let i=0; i<serial_qty; i++) {
                     var SN = $(`#serial_value_${modal_id}_${i}`).val();
                     selectedData[modal_id][i] = {
                         product_id : select_item_id,
                         serial_number : SN
                     }
                 }
                 $(`#exampleModalScrollable_${modal_id}`).modal('hide');
             }
         });


         $(document).on("click", ".btn-addItem", function() {
            var new_item_field = `<div class="item form-group" id="item_${count_item}">
                <label class="col-form-label col-md-3 col-sm-3 label-align">
                    Item <span class="required">*</span>
                </label>
                <div class="col-md-2 col-sm-2">
                    <select class="form-control select_page select_item" required="required" id="select_item_id_${count_item}"
                        style="vertical-align: text-top">
                        <option value=@null>---- Select ----</option>
                        @foreach (ProductData product in @ViewBag.product)
                        {
                        <option value="@product.id">@product.name</option>
                        }
                    </select>
                </div>
                <label class="col-form-label col-md-1 label-align">
                    Qty. <span class="required">*</span>
                </label>
                <div class="col-md-2 col-sm-2">
                    <select class="form-control select_page item_qty" required="required" id="serial_qty_${count_item}"
                        style="vertical-align: text-top">
                        <option value=@null>---- Select ----</option>
                        @for (var i = 1; i<100; i++) { <option value="@i">@i</option>
                            }
                    </select>
                </div>
                <button type="button" class="btn btn-warning btn-sm btn_addSN" style="height: 35px; margin-left: 15px"
                    id=${count_item} data-toggle="modal" data-target="exampleModalScrollable_${count_item}">Add S/N</button>
                <button class="btn btn-danger btn-sm btn_delete_item" id=${count_item} style="height: 35px; margin-left: 15px"><i
                        class="fa fa-trash" style="text-size: 10px"></i></button>
            </div>
            </div>

            <!-- Modal -->
            <div class="modal fade" id="exampleModalScrollable_${count_item}" tabindex="-1" role="dialog"
                aria-labelledby="exampleModalScrollable_${count_item}" aria-hidden="true">
                <div class="modal-dialog modal-dialog-scrollable" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalScrollable_${count_item}">Add Serial Number</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body modal-body_${count_item}">

                            <!-- Serial Number Field -->
                            <div id="modal-body_${count_item}">
                            </div>

                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-primary btn_saveModal" id=${count_item}>Save changes</button>
                        </div>
                    </div>
                </div>
            </div>`

            $('#item_detail').append(new_item_field);
            selectedData[count_item] = [];
            count_item++;
            $(".select_page").select2({
                width: '100%'
            });
         });


         $(document).on("click", ".btn_delete_item", function() {
             var current_item_field = $(this).attr("id");
             $(`#item_${current_item_field}`).remove();
             $(`#exampleModalScrollable_${current_item_field}`).remove();

             selectedData[current_item_field] = [];
            $(".select_page").select2({
                width: '100%'
            });
         });


        $(document).on("change", ".item_qty", function() {
            var total_item = $('#current_total_items').remove();
            var sum_qty = 0;
            for (i=0; i<count_item; i++){
                var count_qty = parseInt($(`#serial_qty_${i}`).val());
                if (isNaN(count_qty)) {
                    continue;
                }
                else
                {
                    sum_qty += count_qty;
                }
            }
            total_item = `<strong id=current_total_items><h2>Total quantity: ${sum_qty} items</h2></strong>`;
            $('#total_item').append(total_item);
        });


        $(document).on("change", ".select_item", function() {
            var current_item_field = $(this).attr("id");
            current_item_field = current_item_field.split("_");
            current_item_field = current_item_field[current_item_field.length-1];
            var select_item_id = $(`#select_item_id_${current_item_field}`).val();

            selectedData[current_item_field].forEach(item => (item.product_id = select_item_id));
        });


         function update_expire_date(service_type)
         {
             var exp_date;
             if (service_type.value == "MA") {
                 exp_date = '<input asp-for="expire_date" class="date-picker form-control" id="exp_date" type="text" placeholder="@DateTime.Now.AddYears(1).ToString("dd MMMM yyyy")" readonly="readonly">';
                 $('#exp_date').remove();
                 $('#expire_date').append(exp_date);
             }
             else if (service_type.value == "PM")
             {
                 exp_date = '<input asp-for="expire_date" class="date-picker form-control" id="exp_date" type="text" placeholder="@DateTime.Now.AddYears(3).ToString("dd MMMM yyyy")" readonly="readonly">';
                 $('#exp_date').remove();
                 $('#expire_date').append(exp_date);
             }
             else {
                 exp_date = '<input asp-for="expire_date" class="date-picker form-control" id="exp_date" type="text" placeholder="Please select service" readonly="readonly">';
                 $('#exp_date').remove();
                 $('#expire_date').append(exp_date);
             }
         }

</script>
}

