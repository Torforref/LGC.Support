@model JobData

<div class="">

    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-12 col-sm-12 ">
            <div class="x_panel">
                <div class="x_title">
                    <h2 style="font-weight: bold">Search By Serial Number.</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <br>
                    <form asp-controller="Job" asp-action="SearchBySN" id="demo-form2" data-parsley-validate="" class="form-horizontal form-label-left" novalidate="">
                        <div class="item form-group">
                            <label asp-for="JodDetails[0].serial_number" class="col-form-label col-md-3 col-sm-3 label-align" for="first-name">
                                Serial Number <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 ">
                                <input asp-for="JodDetails[0].serial_number" type="text" id="first-name" required="required" class="form-control ">
                            </div>
                        </div>
                        <div class="ln_solid"></div>
                        <div class="item form-group">
                            <div class="col-md-6 col-sm-6 offset-md-3">
                                <a asp-controller="Job" asp-action="Index" class="btn btn-danger" style="float: right;">Cancel</a>
                                <button type="submit" class="btn btn-primary btn-submitForm" style="float: right;">Search</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>


</div>


@if (@Model.job_number != null)
{
    <div class="" role="main">

        <div class="container body">
            <div class="main_container">
                <div class="top_nav">
                </div>
                <div class="" role="main">
                    <div class="">
                        <div class="clearfix"></div>
                        <div class="row">
                            <div class="col-md-12 col-sm-12 ">
                                <div class="x_panel">
                                    <div class="x_title">
                                        <h2 style="font-weight: bold">Job Service List &emsp;</h2>
                                        <a class="btn-sm btn-dark" tabindex="0" aria-controls="datatable-buttons" asp-controller="Job" asp-action="Create"><i class="fa fa-plus"> Add</i></a>
                                        <ul class="nav navbar-right panel_toolbox">
                                            <li>
                                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                            </li>
                                        </ul>
                                        <div class="clearfix"></div>
                                    </div>
                                    <div class="x_content">
                                        <div class="row">
                                            <div class="col-sm-12">
                                                <div class="card-box table-responsive">
                                                    <table id="myTable" class="table table-striped table-bordered" style="width: 100%;" role="grid" aria-describedby="datatable-buttons_info">
                                                        <thead>
                                                            <tr role="row" style="text-align: center; background-color: #4B5F71; color: #E9EDEF">
                                                                <th class="sorting" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1">Job Number</th>
                                                                <th class="sorting" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1">Customer</th>
                                                                <th class="sorting" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1">Service Type</th>
                                                                <th class="sorting" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1">Item</th>
                                                                <th class="sorting" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1">Serial Number</th>
                                                                <th class="sorting" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1">Start Date</th>
                                                                <th class="sorting" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1">Exprie Date</th>
                                                                <th class="sorting" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1"></th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            <tr role="row" class="odd">
                                                                <td class="text-center text-muted"><a asp-controller="Job" asp-action="Edit" asp-route-id="@Model.id">@Model.job_number</a></td>

                                                                <td class="text-center">@Model.CustomerDetails.name</td>
                                                                <td class="text-center">@Model.service_type</td>
                                                                <td class="text-center">@Model.JodDetails[0].product_name</td>
                                                                <td class="text-center">@Model.JodDetails[0].serial_number</td>
                                                                <td class="text-center">@Model.created_at.ToString("dd MMMM yyyy")</td>
                                                                <td class="text-center">@Model.expire_date.ToString("dd MMMM yyyy")</td>
                                                                <td class="text-center">
                                                                    <a class="btn btn-sm btn-info" asp-controller="Job" asp-action="Edit" asp-route-id="@Model.id"><i class="fa fa-edit"></i></a>
                                                                </td>
                                                            </tr>
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

