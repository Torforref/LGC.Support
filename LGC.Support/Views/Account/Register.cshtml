@model LGC.Support.Models.UserData
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_LoginAndRegisterForm.cshtml";
}

<partial name="_Notification"/>
<section class="gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">

                        <div class="mb-md-5 mt-md-4 pb-5">
                            <form id="account" method="post">
                                <h2 class="fw-bold mb-2 text-uppercase">Register</h2>
                                <p class="text-white-50 mb-5">Please enter your username and password!</p>
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-outline form-white mb-4">
                                    <input asp-for="username" class="form-control" autocomplete="username" aria-required="true" type="email"/>
                                    <label asp-for="username">Email</label>
                                    <span asp-validation-for="username" class="text-danger"></span>
                                </div>
                                <div class="form-outline form-white mb-4">
                                    <input asp-for="password" class="form-control" autocomplete="username" aria-required="true" type="password"/>
                                    <label asp-for="password">Password</label>
                                    <span asp-validation-for="password" class="text-danger"></span>
                                </div>
                                <div class="form-outline form-white mb-4">
                                    <input asp-for="confirm_password" class="form-control" autocomplete="username" aria-required="true" type="password"/>
                                    <label asp-for="confirm_password">Confirm Password</label>
                                    <span asp-validation-for="confirm_password" class="text-danger"></span>
                                </div>
                                <span class="text-danger">@Model.error_mess</span>
                                <br />
                                <button id="login-submit" type="submit" class="btn btn-outline-light btn-lg px-5">Regiser</button>
                            </form>

                        </div>
                        <div>
                            <p class="mb-0">Already have an account <a asp-controller="Account" asp-action="Login">Login</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}