@model LGC.Support.Models.UserData
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_LoginAndRegisterForm.cshtml";
}
<!-- Sign up form -->
<section class="signup">
    <div class="container">
        <div class="signup-content">
            <div class="signup-form">
                <h2 class="form-title">Sign up</h2>
                <form method="POST" class="register-form" id="register-form" asp-controller="Account" asp-action="Register">
                    <div class="form-group">
                        <label asp-for="username"><i class="zmdi zmdi-email"></i></label>
                        <input asp-for="username" type="email" placeholder="Your Email" />
                        <span asp-validation-for="username" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="first_name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                        <input asp-for="first_name" type="text" placeholder="First Name" />
                    </div>
                    <div class="form-group">
                        <label asp-for="last_name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                        <input asp-for="last_name" type="text" placeholder="Last Name" />
                    </div>
                    <div class="form-group">
                        <label asp-for="password"><i class="zmdi zmdi-lock"></i></label>
                        <input asp-for="password" type="password" placeholder="Password" />
                    </div>
                    <div class="form-group">
                        <label asp-for="confirm_password"><i class="zmdi zmdi-lock-outline"></i></label>
                        <input asp-for="confirm_password" type="password" placeholder="Repeat your password" />
                    </div>
                    <div class="form-group form-button">
                        <input type="submit" class="form-submit" asp-controller="Account" asp-action="Register" />
                    </div>
                </form>
            </div>
            <div class="signup-image">
                <figure><img src="~/LoginAndRegister/images/signup-image.jpg" alt="sing up image"></figure>
                <a asp-controller="Account" asp-action="Login" class="signup-image-link">I am already member</a>
            </div>
        </div>
    </div>
</section>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}