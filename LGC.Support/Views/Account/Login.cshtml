@model LGC.Support.Models.UserData
@{
    ViewData["Title"] = "Log in";
    Layout = "~/Views/Shared/_LoginAndRegisterForm.cshtml";
}

<section class="gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">

                        <div class="mb-md-5 mt-md-4 pb-5">
                            <form method="post" asp-action="Login" asp-controller="Account">
                                <h2 class="fw-bold mb-2 text-uppercase">Login</h2>
                                <p class="text-white-50 mb-5">Please enter your login and password!</p>
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-outline form-white mb-4">
                                    <input asp-for="username" class="form-control" aria-required="true" type="email" placeholder="Email"/>
                                    <label asp-for="username" class="form-label">Email</label>
                                    <span asp-validation-for="username" class="text-danger"></span>
                                </div>
                                <div class="form-outline form-white mb-4">
                                    <input asp-for="password" class="form-control" aria-required="true" type="password" placeholder="Password"/>
                                    <label asp-for="password" class="form-label">Password</label>
                                    <span asp-validation-for="password" class="text-danger"></span>
                                </div>
                                <span class="text-danger">@Model.error_mess</span>
                                <button id="login-submit" type="submit" class="btn btn-outline-light btn-lg px-5">Log in</button>
                            </form>

                        </div>
                        <div>
                            <p class="mb-0">Don't have an account? <a asp-controller="Account" asp-action="Register">Sign Up</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
