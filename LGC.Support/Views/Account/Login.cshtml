@model LGC.Support.Models.UserData
@{
    ViewData["Title"] = "Log in";
    Layout = "~/Views/Shared/_LoginAndRegisterForm.cshtml";
}

<!-- Sing in  Form -->
<section class="sign-in">
    <div class="container">
        <div class="signin-content">
            <div class="signin-image">
                <figure><img src="~/LoginAndRegister/images/signin-image.jpg" alt="sing in"></figure>
                <a asp-controller="Account" asp-action="Register" class="signup-image-link">Create an account</a>
            </div>

            <div class="signin-form">
                <h2 class="form-title">Login</h2>
                <form method="POST" class="register-form" id="login-form" asp-controller="Account" asp-action="Login">
                    <div class="form-group">
                        <label asp-for="username"><i class="zmdi zmdi-account material-icons-name"></i></label>
                        <input asp-for="username" type="email" required="required" placeholder="Email" />
                    </div>
                    <div class="form-group">
                        <label asp-for="confirm_password"><i class="zmdi zmdi-lock-outline"></i></label>
                        <input asp-for="password" type="password" required="required" placeholder="Password" />
                    </div>
                    <span style="color: red">@Model.error_mess</span>
                    <div class="form-group form-button">
                        <input type="submit" class="form-submit" asp-controller="Account" asp-action="Login" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}