<div class="" role="main">

    <div class="container body">
        <div class="main_container">
            <div class="top_nav">
            </div>
            <div class="" role="main">
                <div class="">
                    <div class="clearfix"></div>
                    <div class="row">
                        <div class="col-md-12 col-sm-12 ">
                            <div class="x_panel">
                                <div class="x_title">
                                    <h2>Product List</h2>
                                    <ul class="nav navbar-right panel_toolbox">
                                        <li>
                                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                        </li>
                                    </ul>
                                    <div class="clearfix"></div>
                                </div>
                                <div class="x_content">
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <div class="card-box table-responsive">
                                                <div id="datatable-buttons_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap no-footer">
                                                    <a class="btn btn-round btn-primary" tabindex="0" aria-controls="datatable-buttons" asp-controller="Product" asp-action="Create"><i class="fa fa-plus"> Add Product</i></a>
                                                    <table id="datatable-buttons" class="table table-striped jambo_table table-bordered dataTable no-footer dtr-inline" style="width: 100%;" role="grid" aria-describedby="datatable-buttons_info">
                                                        <thead>
                                                            <tr role="row" style="text-align: center">
                                                                <th class="sorting" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1">Name</th>
                                                                <th class="sorting" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1">Description</th>
                                                                <th class="sorting" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1">Category</th>
                                                                <th class="sorting" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1">Brand</th>
                                                                <th class="sorting" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1">Created At</th>
                                                                <th class="sorting" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1">Created By</th>
                                                                <th class="sorting" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1">Update At</th>
                                                                <th class="sorting" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1">Update By</th>
                                                                <th class="sorting" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1"></th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            @foreach (var product in Model)
                                                            {
                                                                <tr role="row" class="odd">
                                                                    <td class="text-center text-muted"><a asp-controller="Product" asp-action="Edit" asp-route-id="@product.id">@product.name</a></td>
                                                                    <td class="text-muted">@product.description</td>
                                                                    <td class="text-center">@product.category</td>
                                                                    <td class="text-center">@product.brand</td>
                                                                    <td class="text-center">
                                                                        <div class="badge badge-warning">@product.created_at</div>
                                                                    </td>
                                                                    <td class="text-center">
                                                                        <div class="badge badge-primary">@product.created_by</div>
                                                                    </td>
                                                                    <td class="text-center">
                                                                        <div class="badge badge-warning">@product.updated_at</div>
                                                                    </td>
                                                                    <td class="text-center">
                                                                        <div class="badge badge-primary">@product.updated_by</div>
                                                                    </td>
                                                                    <td class="text-center">

                                                                        <a class="btn btn-sm btn-info" asp-controller="Product" asp-action="Edit" asp-route-id="@product.id"><i class="fa fa-edit"></i></a>
                                                                        <button class="btn btn-sm btn-danger" type="button" onclick="ConfirmDelete('@product.id')" id="@product.id"><i class="fa fa-trash"></i></button>
                                                                    </td>
                                                                </tr>
                                                            }
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function ConfirmDelete(id) {
        Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
            if (result.isConfirmed) {
                $.post('@Url.Action("Delete","Product")', { id: id }, function (data) {
                    if (data.result == "ok") {
                        Swal.fire({
                            //position: 'top-end',
                            icon: 'success',
                            title: 'Your product has been deleted.',
                            showConfirmButton: false,
                            timer: 2000
                        })
                        setTimeout(function () {
                            location.reload();
                        }, 2000);
                    } else {
                        Swal.fire({
                            //position: 'top-end',
                            type: 'error',
                            title: data.result,
                            showConfirmButton: false,
                            timer: 2000
                        })
                    }
                });
            }
        })
    }
</script>