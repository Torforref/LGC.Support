@model ProductData

<div class="row">
    <div class="col-md-12 col-sm-12 ">
        <div class="x_panel">
            <div class="x_title">
                <h2 style="font-weight: bold">Update Product</h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <br>
                <form id="demo-form2" data-parsley-validate="" class="form-horizontal form-label-left" asp-controller="Product" asp-action="Edit">
                    <div class="item form-group">
                        <label asp-for="name" class="col-form-label col-md-3 col-sm-3 label-align">
                            Product Name 
                        </label>
                        <div class="col-md-6 col-sm-6 ">
                            <input asp-for="name" type="text" required="required" class="form-control" readonly="readonly">
                        </div>
                    </div>
                    <div class="item form-group">
                        <label asp-for="description" class="col-form-label col-md-3 col-sm-3 label-align">
                            Description
                        </label>
                        <div class="col-md-6 col-sm-6 ">
                            <input asp-for="description" type="text" class="form-control">
                        </div>
                    </div>
                    <div class="item form-group">
                        <label asp-for="description2" class="col-form-label col-md-3 col-sm-3 label-align">
                            Description 2
                        </label>
                        <div class="col-md-6 col-sm-6 ">
                            <input asp-for="description2" type="text" class="form-control">
                        </div>
                    </div>
                    <div class="item form-group">
                        <label asp-for="category" class="col-form-label col-md-3 col-sm-3 label-align">
                            Select Category 
                        </label>
                        <div class="col-md-6 col-sm-6 ">
                            <select asp-for="category" class="form-control" required="required">
                                <option value=@null>---- Select ----</option>
                                <option value="PRINTER">PRINTER</option>
                            </select>
                        </div>
                    </div>
                    <div class="item form-group">
                        <label asp-for="brand" class="col-form-label col-md-3 col-sm-3 label-align">
                            Select Brand 
                        </label>
                        <div class="col-md-6 col-sm-6">
                            <select asp-for="brand" class="form-control" required="required">
                                <option value=@null>---- Select ----</option>
                                <option value="TSC">TSC</option>
                                <option value="HONEYWELL">HONEYWELL</option>
                                <option value="VENUS">VENUS</option>
                            </select>
                        </div>
                    </div>
                    <div class="ln_solid"></div>
                    <div class="item form-group">
                        <div class="col-md-6 col-sm-6 offset-md-3">
                            <button type="submit" class="btn btn-primary">Update</button>
                            <a asp-controller="Product" asp-action="Index" class="btn btn-danger"> Cancel</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>